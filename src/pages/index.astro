---
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import Button from '../components/Button.astro';
import Footer from '../components/Footer.astro';

import FeatureList from '../components/story-views/FeatureList.tsx';
---

<Layout title="Sidekyk" showNav={true} showFooter={true}>
	<div class="container mx-auto">

		<div class="w-full flex flex-col bg-zinc-100 dark:bg-zinc-900 py-4 lg:pt-10">
			<div class="h-full flex flex-col items-center justify-center px-8 py-8">
				<h1 class="hero max-w-xs sm:max-w-xl lg:max-w-2xl text-left lg:text-center">Your personal AI sidekicks!</h1>
				<div class="w-full lg:max-w-xl mx-auto flex flex-col md:flex-row lg:items-center lg:justify-center gap-3 mt-8 lg:mt-6">
					<Button full={true} renderHyperlink={true} href="/download">Download</Button>
					<Button full={true} variant="ghost" renderHyperlink={true} href="/sign-in">Sign In</Button>
				</div>
			</div>
		</div>

		<div class="w-full lg:col-span-6 2xl:col-span-7 overflow-hidden" id="stories">
			<FeatureList client:load />
		</div>
	</div>
</Layout>
