---
import ThemeToggle from '../components/ThemeToggle.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	showNav?: boolean;
	showFooter?: boolean;
}

const { title, showNav = true, showFooter = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Your personal AI sidekicks">
		<meta name="viewport" content="width=device-width" />
		<meta name="theme-color" content="#EF4343" />
		<meta name="color-scheme" content="light dark" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>
	<body>
		{showNav &&
			<nav class="fixed top-0 w-screen flex items-center justify-between bg-zinc-100/10 dark:bg-zinc-900/10 backdrop-blur-xl border-b border-b-zinc-200 dark:border-b-zinc-800 py-4 px-4 lg:px-6 z-[999]">

				<a class="block h-9 aspect-square rounded-lg overflow-hidden !no-underline" href="/">
					<svg viewBox="0 0 512 512" fill="none" xmlns="http://www.w3.org/2000/svg">
						<rect width="512" height="512" fill="#EF4343"/>
						<circle cx="256.96" cy="182.952" r="54.9515" fill="white"/>
						<rect x="179" y="249" width="46" height="135" rx="23" fill="white"/>
						<rect x="288" y="249" width="46" height="135" rx="23" fill="white"/>
						<circle cx="255.943" cy="182.952" r="54.9515" fill="white"/>
						<rect x="201.713" y="237.903" width="46.1132" height="109.903" rx="23.0566" transform="rotate(45 201.713 237.903)" fill="white"/>
						<rect x="278.679" y="270.51" width="46.1132" height="109.903" rx="23.0566" transform="rotate(-45 278.679 270.51)" fill="white"/>
					</svg>
				</a>

				<div>
					<ThemeToggle />
				</div>
			</nav>
		}

		<main class:list={[{"mt-[10vh]": showNav}]}>
			<slot />
		</main>

		{showFooter &&
		<Footer />
		}

	</body>
</html>

<script is:inline src="https://unpkg.com/lucide@latest"></script>

<!-- Global styles -->
<style lang="scss" is:global>
	@import url("https://fonts.cdnfonts.com/css/euclid-circular-b");
	@import url('https://fonts.cdnfonts.com/css/naston');
	@import url('https://fonts.cdnfonts.com/css/poppins');

	:root {
		--primary: #EF4343;
	}

	body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;;
		@apply text-base text-zinc-900 dark:text-zinc-100 bg-zinc-100 dark:bg-zinc-900 antialiased transition-colors;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	a {
		color: var(--primary) !important;

		&:hover {
			@apply underline;
		}
	}

	h1 {
		&.hero {
			font-family: 'Naston', "Helvetica Neue", Helvetica, Arial, sans-serif;
			font-weight: 700;
			@apply text-4xl sm:text-4xl lg:text-6xl lg:leading-relaxed;
		}
	}

	.app-border {
		@apply border-zinc-200 dark:border-zinc-800;

		&.left {
			@apply border-l;
		}

		&.right {
			@apply border-r;
		}

		&.top {
			@apply border-t;
		}

		&.bottom {
			@apply border-b;
		}

		&.all {
			@apply border;
		}
	}

	::selection {
		@apply bg-primary;
	}
	::-moz-selection {
		@apply bg-primary;
	}
	::-webkit-selection {
		@apply bg-primary;
	}

	/* Scrollbar */
	::-webkit-scrollbar {
		width: 8px;
		height: 6px;
	}
	::-webkit-scrollbar-track {
		background: transparent;
	}
	::-webkit-scrollbar-thumb {
		@apply bg-primary/70 rounded-xl;
	}
	::-webkit-scrollbar-thumb:hover {
		@apply bg-primary
	}
</style>
